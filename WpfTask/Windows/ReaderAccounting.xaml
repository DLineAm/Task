        <Label Content="Отчество"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,161,0,106" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="30" FontSize="18" Width="89"/>
        <Label Content="Взятая книга: " HorizontalAlignment="Left" VerticalAlignment="Center" Margin="24,194,0,68" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="30" FontSize="18" Width="350"/>

    </Grid>
</Window>
